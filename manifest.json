{
  "manifest_version": 3,

  "name": "Tab Alphabetizer",
  "description": "Alphabetize your tabs by domain.",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": [
      "alphabetize.js"
    ],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}

